{
    "name": "chess-ai-battle-server",
    "version": "0.1.0-dev",
    "description": "A server for chess AIs to battle against each other.",
    "author": "Benedikt Magnus",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BenediktMagnus/Chess-AI-Battle-Server.git"
    },
    "keywords": [
        "bot",
        "discord"
    ],
    "engines": {
        "node": ">=14.15.0"
    },
    "dependencies": {
    },
    "devDependencies": {
        "@types/node": "14.17.9",
        "@typescript-eslint/eslint-plugin": "4.29.2",
        "@typescript-eslint/parser": "4.29.2",
        "eslint": "7.32.0",
        "typescript": "4.3.5"
    },
    "files": [
        "bin",
        "LICENSE",
        "README.md"
    ],
    "main": "bin/backend/main.js",
    "scripts": {
        "build": "npm run build:backend && npm run build:frontend",
        "build:backend": "npx tsc --build src/backend/tsconfig.json",
        "build:frontend": "npx tsc --build src/frontend/tsconfig.json",
        "clean": "rm -rf bin",
        "lint": "npm run lint:backend && npm run lint:frontend",
        "lint:backend": "cd src/backend && npx eslint .",
        "lint:frontend": "cd src/frontend && npx eslint .",
        "prepack": "npm run clean && npx tsc -p src/backend/tsconfig.release.json && npx tsc -p src/frontend/tsconfig.release.json",
        "start": "node bin/backend/main.js"
    },
    "private": true
}
