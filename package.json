{
    "name": "chess-ai-battle-server",
    "version": "0.1.0-dev",
    "description": "A server for chess AIs to battle against each other.",
    "author": "Benedikt Magnus",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BenediktMagnus/Chess-AI-Battle-Server.git"
    },
    "keywords": [
        "bot",
        "discord"
    ],
    "engines": {
        "node": ">=14.15.0"
    },
    "dependencies": {
        "chess.js": "0.12.0",
        "compression": "1.7.4",
        "express": "4.17.1",
        "socket.io": "4.1.2",
        "socket.io-client": "4.1.2"
    },
    "devDependencies": {
        "@types/chai": "4.2.21",
        "@types/chess.js": "0.11.2",
        "@types/compression": "1.7.1",
        "@types/express": "4.17.13",
        "@types/mocha": "9.0.0",
        "@types/node": "14.17.9",
        "@typescript-eslint/eslint-plugin": "4.29.2",
        "@typescript-eslint/parser": "4.29.2",
        "chai": "4.3.4",
        "eslint": "7.32.0",
        "mocha": "9.1.0",
        "nyc": "15.1.0",
        "ts-node": "10.2.1",
        "ts-mockito": "2.6.1",
        "typescript": "4.3.5"
    },
    "files": [
        "bin",
        "files",
        "LICENSE",
        "README.md"
    ],
    "main": "bin/backend/main.js",
    "scripts": {
        "build": "npm run build:backend && npm run build:frontend",
        "build:backend": "npx tsc --build src/backend/tsconfig.json",
        "build:frontend": "npx tsc --build src/frontend/tsconfig.json",
        "clean": "rm -rf bin && rm -rf coverage",
        "coverage": "npx nyc npm run test",
        "coverage:text": "npx nyc --reporter=text npm run test",
        "lint": "npm run lint:backend && npm run lint:frontend",
        "lint:backend": "cd src/backend && npx eslint .",
        "lint:frontend": "cd src/frontend && npx eslint .",
        "prepack": "npm run clean && npx tsc -p src/backend/tsconfig.release.json && npx tsc -p src/frontend/tsconfig.release.json",
        "start": "node bin/backend/main.js",
        "test": "npx mocha -r ts-node/register/transpile-only 'tests/**/*.ts'"
    },
    "private": true
}
